    "version": "2.0.0",
    "tasks": [
        {
            "label": "执行代码",
            "type": "shell",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "${workspaceFolder}/.vscode/ccrunner.sh",
            "windows": {
              "command": "${workspaceFolder}\\.vscode\\tccrunner.bat"
            },
            "options": {
              "cwd": "${fileDirname}"
            }
        }
    ]
}
